## Скопируй/переименуй в .env рядом с docker-compose.yml

# обязательный токен бота
BOT_TOKEN=123456:ABCDEF_your_bot_token_here

# строка подключения к Postgres (по умолчанию совпадает с docker-compose)
POSTGRES_CONNECTION_STRING=Host=postgres;Port=5432;Database=pills;Username=pills;Password=pills;Pooling=true;Maximum Pool Size=20

# опционально: тюнинг расписания (удобно для тестов)
# SCHEDULER_POLL_SECONDS=10
# REPEAT_UNTIL_ACK_MINUTES=1

# опционально: uid пользователя внутри контейнера (по умолчанию 0)
# APP_UID=0


